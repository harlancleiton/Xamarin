<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="NovosComponentes.RangePage">
    <ContentPage.Content>
        <StackLayout>
            <Label x:Name="LblSlider" />
            <Slider Minimum="1" Maximum="10" Value="10" ValueChanged="OnSliderValueChanged"></Slider>
            <Label x:Name="LblStepper" />
            <Stepper Minimum="0" Maximum="10" Increment="2" Value="0" ValueChanged="OnStepperValueChanged"></Stepper>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>