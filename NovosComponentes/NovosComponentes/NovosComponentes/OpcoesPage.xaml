<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="NovosComponentes.OpcoesPage">
    <ContentPage.Content>
        <StackLayout>
            <Label Text="Qual sua empresa favorita?" />
            <Picker>
                <Picker.Items>
                    <x:String>Microsoft</x:String>
                    <x:String>Sony</x:String>
                    <x:String>Google</x:String>
                    <x:String>Samsung</x:String>
                    <x:String>Apple</x:String>
                </Picker.Items>
            </Picker>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>